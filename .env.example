# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dartsturnier"

# SMTP Configuration (Required for Magic Link Authentication)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=your_smtp_password_here
SMTP_FROM="Darts Turnier" <noreply@yourdomain.com>

# Email Branding
SMTP_LOGO_URL=https://yourdomain.com/logo.png
BRAND_NAME="Darts Masters"
BRAND_COLOR=#dc2626

# NextAuth (REQUIRED - Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_strong_secret_here_minimum_32_chars
NEXTAUTH_URL=https://yourdomain.com

# Redis Rate Limiting (Required for Production)
REDIS_URL=redis://localhost:6379
# or for Upstash:
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token_here

# Optional: Stripe Payment Integration
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: Development Features (NEVER enable in production!)
# DEV_LOGIN_ALLOWED=false
NODE_ENV=production
